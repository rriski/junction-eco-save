generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Building {
  building_id             String       @unique
  construction_date       DateTime?
  heating_category        String
  fuel_category           String
  construction_material   String
  area_living             Float?
  area_floors             Float?
  floors                  Int?
  location_street_address String?
  location_street_number  String?
  location_post_number    String?
  type                    String
  id                      Int          @id @default(autoincrement())
  photovoltaic_potential  Float?
  Renovation              Renovation[]
}

model Renovation {
  id          Int      @id @default(autoincrement())
  start_year  Int
  end_year    Int
  description String?
  category    String?
  buildingId  Int
  building_id Building @relation(fields: [buildingId], references: [id])
}

model spatial_ref_sys {
  srid      Int     @id
  auth_name String?
  auth_srid Int?
  srtext    String?
  proj4text String?
}

